{% extends '1col.html.twig' %}

{% block title parent() ~ 'Neuen Charakter anlegen' %}

{% block maincontent %}

    <div class="card maincontent text-white bg-dark">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="card-header charsheet">
            <div class="row">
                <div class="col-12">
                    <ul class="nav nav-tabs row justify-content-md-left" id="myTab" role="tablist">
                        <li class="nav-item col-12 col-md-auto nopadding">
                            <a class="nav-link active" id="personaldata-tab" data-toggle="tab" href="#personaldata" role="tab" aria-controls="personaldata" aria-selected="true">Persönliche Daten</a>
                        </li>
                        <li class="nav-item col-12 col-md-auto nopadding">
                            <a class="nav-link" id="playvalues-tab" data-toggle="tab" href="#playvalues" role="tab" aria-controls="playvalues" aria-selected="false">Spielwerte</a>
                        </li>
                        <li class="nav-item col-12 col-md-auto nopadding">
                            <a class="nav-link" id="battle-tab" data-toggle="tab" href="#battle" role="tab" aria-controls="battle" aria-selected="false">Kampf</a>
                        </li>
                        <li class="nav-item col-12 col-md-auto nopadding">
                            <a class="nav-link" id="ownership-tab" data-toggle="tab" href="#ownership" role="tab" aria-controls="ownership" aria-selected="false">Besitz</a>
                        </li>
                        <li class="nav-item col-12 col-md-auto nopadding">
                            <a class="nav-link" id="spells-tab" data-toggle="tab" href="#spells" role="tab" aria-controls="spells" aria-selected="false">Zauber</a>
                        </li>
                        <li class="nav-item col-12 col-md-auto nopadding">
                            <a class="nav-link" id="liturgies-tab" data-toggle="tab" href="#liturgies" role="tab" aria-controls="liturgies" aria-selected="false">Liturgien</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <!-- Seite Persönliche Daten -->
                <div class="tab-pane fade show active" id="personaldata" role="tabpanel" aria-labelledby="personaldata-tab">
                    <div class="charactersheet">
                        <div class="row name">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12 nopadding">
                                        <div class="name-box {% if not form.charname.vars.valid %}has-error{% endif %}">
                                            <div class="col-12 name-description nopadding">Name</div>
                                            <div class="col-12 name-value nopadding">
                                                {{ form_widget(form.charname, {'attr': {'class':'inputbox' }}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row break"></div>
                        <div class="row experience">
                            <div class="col-6 col-md-3">
                                <div class="row">
                                    <div class="col-12 nopadding">
                                        <div class="experience-box">
                                            <div class="col-12 experience-description nopadding">Erfahrungsgrad</div>
                                            <div class="col-12 experience-value nopadding">
                                                {{ form_widget(form.experiencelevel, {'attr': {'class':'inputbox text-center' }}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="row">
                                    <div class="col-12 nopadding">
                                        <div class="experience-box">
                                            <div class="col-12 experience-description nopadding">AP Gesamt</div>
                                            <div class="col-12 experience-value nopadding">
                                                {{ form_widget(form.aptotal, {'attr': {'class':'inputbox text-center' }}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
