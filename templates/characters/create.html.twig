                                <div class="row">
                                    <div class="col-12 nopadding">
                                        <div class="story-box">
                                            <div class="col-12 story-description nopadding">Sonstiges</div>
                                            <div class="col-12 story-value nopadding">{{ form_widget(form.further, {'attr': {'class':'inputbox' }}) }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row break"></div>
                        <div class="row energy">
                            <div class="col-12 col-md-4">
                                <div class="row">
                                    <div class="col-12 p-0">
                                        <div class="energy-box">
                                            <div class="col-12 energy-description p-0">Lebensenergie</div>
                                            <div class="col-12 energy-values p-0">
                                                <div class="col-3 energy-value p-0">{{ form_widget(form.lifeenergy, {'attr': {'class':'inputbox' }}) }}</div>
                                                <div class="col-3 energy-value p-0">{{ form_widget(form.lifeenergybonus, {'attr': {'class':'inputbox' }}) }}</div>
