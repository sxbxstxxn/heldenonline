                                    <div class="col-12 nopadding">
                                        <div class="experience-box">
                                            <div class="col-12 experience-description nopadding">AP verfügbar</div>
                                            <div class="col-12 experience-value nopadding">
                                                {{ form_widget(form.apavailable, {'attr': {'class':'inputbox text-center' }}) }}
