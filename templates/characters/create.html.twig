                                            <div class="col-12 story-description nopadding">SO</div>
                                            <div class="col-12 story-value nopadding">{{ form_widget(form.socialstatus, {'attr': {'class':'inputbox' }}) }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="row">
                                    <div class="col-12 nopadding">
                                        <div class="story-box">
                                            <div class="col-12 story-description nopadding">Familie</div>
                                            <div class="col-12 story-value nopadding">{{ form_widget(form.family, {'attr': {'class':'inputbox' }}) }}</div>
