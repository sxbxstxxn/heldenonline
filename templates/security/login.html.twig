{% extends '1col.html.twig' %}

{% block title parent() ~ 'Login' %}

{% block maincontent %}
    <div class="card text-white bg-dark">
        <div class="card-header">
            Login
        </div>
        <div class="card-body">
            <form action="{{ path('login') }}" method="post" novalidate>
                <div class="form-group row">
                    <label for="username" class="col-sm-4 col-form-label">Benutzername</label>
                    <div class="col-sm-8">
                        <input type="text" id="username" name="_username" required="required" class="form-control {{ (error) ? 'is-invalid' : ''}}" value="{{ last_username }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-4 col-form-label">Passwort</label>
                    <div class="col-sm-8">
                        <input type="password" id="password" name="_password" required="required" class="password-field form-control {{ (error) ? 'is-invalid' : ''}}">
                        {% if error %}
                            <div class="invalid-feedback">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary float-right">Login</button>
            </form>
        </div>
        <div class="card-footer"><a href="{{ path('forgotpw') }}" class="text-secondary">Passwort vergessen</a></div>
    </div>
{% endblock %}