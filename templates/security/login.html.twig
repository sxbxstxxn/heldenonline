{% extends '1col.html.twig' %}

{% block title parent() ~ 'Homepage' %}
{% block content_id 'homepage' %}

{% block maincontent %}
    <div class="card">
        <div class="card-body">
            <h2>Login</h2>
            {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label class="control-label required" for="username">Benutzername</label>
                    <input type="text" id="username" name="_username" required="required" class="password-field form-control" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <label class="control-label required" for="password">Passwort</label>
                    <input type="password" id="password" name="_password" required="required" class="password-field form-control">
                </div>
                <button type="submit" class="btn btn-dark">Login</button>
            </form>
        </div>
    </div>
{% endblock %}